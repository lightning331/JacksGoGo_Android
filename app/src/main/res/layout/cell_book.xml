<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="80dp">
    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/book_border_background"
        android:gravity="center">
        <TextView
            android:id="@+id/txt_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulibold"
            android:textSize="@dimen/title2_font_size"
            android:textColor="@color/JGGBlack"
            android:text="6/7"/>
        <TextView
            android:id="@+id/txt_weekday"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muliregular"
            android:textSize="@dimen/list_text_font_size"
            android:textAlignment="center"
            android:textColor="@color/JGGBlack"
            android:text="Thu"/>
    </LinearLayout>
</LinearLayout>