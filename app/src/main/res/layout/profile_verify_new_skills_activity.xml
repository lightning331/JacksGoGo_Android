<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kelvin.jacksgogo.Activities.Profile.VerifyNewSkillsActivity">
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:theme="@style/AppTheme"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/verify_skill_actionbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/JGGWhite"
                app:contentInsetStart="0dp"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/AppTheme"/>
        </android.support.design.widget.AppBarLayout>
        <LinearLayout
            android:id="@+id/verify_skill_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <TextView
                android:text="Instructions"
                android:textColor="@color/JGGBlack"
                android:textSize="@dimen/title3_font_size"
                android:fontFamily="@font/mulibold"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="1."
                android:textColor="@color/JGGBlack"
                android:textSize="@dimen/list_title_font_size"
                android:fontFamily="@font/mulibold"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="2."
                android:textColor="@color/JGGBlack"
                android:textSize="@dimen/list_title_font_size"
                android:fontFamily="@font/mulibold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="3."
                android:textColor="@color/JGGBlack"
                android:textSize="@dimen/list_title_font_size"
                android:fontFamily="@font/mulibold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:onClick="onSubmit"
                android:id="@+id/btn_submit"
                android:text="Submit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:padding="@dimen/edit_text_padding_size"
                android:textAlignment="center"
                android:fontFamily="@font/mulibold"
                android:textSize="@dimen/button_font_size"
                android:textColor="@color/JGGWhite"
                android:background="@drawable/green_background">
            </TextView>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>

</android.support.constraint.ConstraintLayout>
