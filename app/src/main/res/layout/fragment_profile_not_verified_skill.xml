<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/JGGGrey5"
    tools:context="com.kelvin.jacksgogo.Fragments.Profile.NotVerifiedSkillFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:text="Instructions"
            android:textColor="@color/JGGBlack"
            android:textSize="@dimen/title3_font_size"
            android:fontFamily="@font/mulibold"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="1."
            android:textColor="@color/JGGBlack"
            android:textSize="@dimen/list_title_font_size"
            android:fontFamily="@font/mulibold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="2."
            android:textColor="@color/JGGBlack"
            android:textSize="@dimen/list_title_font_size"
            android:fontFamily="@font/mulibold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="3."
            android:textColor="@color/JGGBlack"
            android:textSize="@dimen/list_title_font_size"
            android:fontFamily="@font/mulibold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/btn_submit"
            android:text="Submit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="@dimen/edit_text_padding_size"
            android:textAlignment="center"
            android:fontFamily="@font/mulibold"
            android:textSize="@dimen/button_font_size"
            android:textColor="@color/JGGWhite"
            android:background="@drawable/green_background">
        </TextView>
    </LinearLayout>

</FrameLayout>
