<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/JGGGrey5"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:background="@color/JGGGrey4">
    </LinearLayout>
    <TextView
        android:text="Events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/JGGBlack"
        android:fontFamily="@font/mulibold"
        android:textSize="@dimen/list_title_font_size"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/go_club_detail_event_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/JGGGrey5"
        android:orientation="vertical">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:text="View Past Events"
        android:id="@+id/btn_past_event"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:fontFamily="@font/mulibold"
        android:textSize="@dimen/list_title_font_size"
        android:textColor="@color/JGGPurple"
        android:background="@drawable/purple_border_background"/>
    <TextView
        android:text="Create New Event"
        android:id="@+id/btn_create_event"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:fontFamily="@font/mulibold"
        android:textSize="@dimen/list_title_font_size"
        android:textColor="@color/JGGWhite"
        android:background="@drawable/purple_background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:background="@color/JGGGrey4">
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/go_club_detail_member_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/JGGGrey5"
        android:orientation="vertical">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>