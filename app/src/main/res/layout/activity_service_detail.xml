<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kelvin.jacksgogo.Activities.Jobs.JobDetailActivity">
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:theme="@style/AppTheme"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/app_original_actionbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/JGGWhite"
                app:contentInsetStart="0dp"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/AppTheme"/>
        </android.support.design.widget.AppBarLayout>
        <FrameLayout
            android:id="@+id/app_original_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/JGGGrey5"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        </FrameLayout>
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/service_detail_bottom"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_gravity="bottom"
            app:itemTextColor="@color/JGGWhite"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:itemTextAppearance="@style/NavigationViewOwnStyle">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/JGGGreen10Percent">
                        <TextView
                            android:id="@+id/lbl_booked_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:textColor="@color/JGGBlack"
                            android:textSize="@dimen/caption_font_size"
                            android:fontFamily="@font/mulibold"
                            android:text="21k"/>
                        <TextView
                            android:id="@+id/lbl_booked_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:maxLines="1"
                            android:textColor="@color/JGGBlack"
                            android:textSize="@dimen/caption_font_size"
                            android:fontFamily="@font/muliregular"
                            android:text="people have booked this service!"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="end|center"
                        android:orientation="horizontal"
                        android:background="@color/JGGGreen10Percent">
                        <TextView
                            android:id="@+id/lbl_viewing_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/JGGBlack"
                            android:textSize="@dimen/caption_font_size"
                            android:fontFamily="@font/mulibold"
                            android:text="3"
                            android:gravity="end" />
                        <TextView
                            android:id="@+id/lbl_viewing_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd"
                            android:gravity="end"
                            android:textColor="@color/JGGBlack"
                            android:layout_marginRight="16dp"
                            android:textSize="@dimen/caption_font_size"
                            android:fontFamily="@font/muliregular"
                            android:text="viewing now "/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/service_detail_bottom_title"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/buy_service"
                    android:textAlignment="center"
                    android:background="@color/JGGGreen"
                    android:textColor="@color/JGGWhite"
                    android:fontFamily="@font/mulibold"
                    android:textSize="@dimen/button_font_size"
                    android:gravity="center"/>
            </LinearLayout>
        </android.support.design.widget.BottomNavigationView>
    </android.support.design.widget.CoordinatorLayout>
</android.support.constraint.ConstraintLayout>
