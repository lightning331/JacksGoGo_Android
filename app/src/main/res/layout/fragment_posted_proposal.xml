<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kelvin.jacksgogo.Fragments.Jobs.PostedProposalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/JGGGrey5">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/JGGGrey5"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/category_layout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/JGGWhite"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="12"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/img_category"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_gravity="right"
                            android:src="@mipmap/icon_cat_householdchores"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="88"
                        android:gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/lbl_category_name"
                                android:text="Gardening"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/JGGBlack"
                                android:fontFamily="@font/mulibold"
                                android:textSize="@dimen/caption_font_size"/>
                            <TextView
                                android:id="@+id/lbl_date"
                                android:text="21 Jul, 2017 10:00-12:00PM"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:textColor="@color/JGGBlack"
                                android:fontFamily="@font/muliregular"
                                android:textSize="@dimen/caption_font_size"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/JGGGrey4">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:orientation="horizontal">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:background="@color/JGGWhite">
                    <LinearLayout
                        android:layout_width="96dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <com.makeramen.roundedimageview.RoundedImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/img_user_avatar"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/nurse"
                            android:background="@color/transparent"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            app:riv_corner_radius="@dimen/circle_image_radius"
                            app:riv_mutate_background="true"
                            app:riv_oval="true"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="45"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:text="Alan.Tam"
                            android:id="@+id/lbl_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/JGGBlack"
                            android:fontFamily="@font/mulibold"
                            android:textSize="@dimen/button_font_size"/>
                        <me.zhanghai.android.materialratingbar.MaterialRatingBar
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            style="@style/Widget.MaterialRatingBar.RatingBar"
                            android:id="@+id/user_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="13dp"
                            android:layout_gravity="center_vertical"
                            android:stepSize="0.01"
                            android:isIndicator="true"
                            app:mrb_progressBackgroundTint="@color/JGGGrey3"
                            app:mrb_progressTint="@color/JGGYellow"
                            app:mrb_secondaryProgressTint="@color/JGGYellow" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:orientation="horizontal">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/JGGWhite"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="52dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="6dp"
                            android:src="@mipmap/icon_info"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="85"
                        android:layout_marginRight="16dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/lbl_description"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:textColor="@color/JGGBlack"
                            android:fontFamily="@font/muliregular"
                            android:textSize="@dimen/list_title_font_size"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:orientation="vertical"
                    android:background="@color/JGGWhite">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:orientation="horizontal">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/JGGWhite"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="52dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="6dp"
                            android:src="@mipmap/icon_time"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/lbl_budget_type"
                                android:text="Package"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/JGGBlack"
                                android:fontFamily="@font/muliregular"
                                android:textSize="@dimen/button_font_size"/>
                            <TextView
                                android:id="@+id/lbl_bid_budget"
                                android:text="$ 250.00/month"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="16dp"
                                android:textColor="@color/JGGBlack"
                                android:fontFamily="@font/mulibold"
                                android:textSize="@dimen/button_font_size"/>
                        </LinearLayout>
                        <TextView
                            android:text="Breakdown:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/JGGGrey2"
                            android:fontFamily="@font/muliregular"
                            android:textSize="@dimen/badge_font_size"/>
                        <TextView
                            android:id="@+id/lbl_supplies"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/JGGBlack"
                            android:fontFamily="@font/muliregular"
                            android:textSize="@dimen/button_font_size"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:orientation="vertical"
                    android:background="@color/JGGWhite">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:orientation="horizontal">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/JGGWhite"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="52dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="6dp"
                            android:src="@mipmap/icon_reschedule"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="85"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:text="Rescheduling:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/JGGBlack"
                            android:fontFamily="@font/mulibold"
                            android:textSize="@dimen/list_title_font_size"/>
                        <TextView
                            android:id="@+id/lbl_rescheduling"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:textColor="@color/JGGBlack"
                            android:fontFamily="@font/muliregular"
                            android:textSize="@dimen/list_title_font_size"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:orientation="vertical"
                    android:background="@color/JGGWhite">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:orientation="horizontal">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/JGGWhite"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="52dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="6dp"
                            android:src="@mipmap/icon_cancellation"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="85"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:text="Cancellation:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/JGGBlack"
                            android:fontFamily="@font/mulibold"
                            android:textSize="@dimen/list_title_font_size"/>
                        <TextView
                            android:id="@+id/lbl_cancellation"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:textColor="@color/JGGBlack"
                            android:fontFamily="@font/muliregular"
                            android:textSize="@dimen/list_title_font_size"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:orientation="vertical"
                    android:background="@color/JGGWhite">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:orientation="horizontal">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@color/JGGWhite">
                    <TextView
                        android:id="@+id/lbl_reference_no"
                        android:text="Job reference no: J39256-17340"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/JGGBlack"
                        android:fontFamily="@font/mulibold"
                        android:textSize="@dimen/button_font_size"/>
                    <TextView
                        android:id="@+id/lbl_reference_posted_date"
                        android:text="Job posted on 5 Jul, 2017"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/JGGGrey2"
                        android:fontFamily="@font/muliregular"
                        android:textSize="12dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
