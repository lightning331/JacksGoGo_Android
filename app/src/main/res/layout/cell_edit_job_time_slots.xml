<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:gravity="center"
    android:background="@color/JGGWhite">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/lbl_time_slots_time"
            android:text="10:00AM - 12:00PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muliregular"
            android:textSize="@dimen/list_text_font_size"
            android:textColor="@color/JGGBlack"
            android:layout_marginLeft="15dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1">
        </LinearLayout>
        <TextView
            android:id="@+id/lbl_time_slots_pax"
            android:text="2 pax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/muliregular"
            android:textSize="@dimen/list_text_font_size"
            android:textColor="@color/JGGBlack"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end">
        <TextView
            android:id="@+id/btn_time_slots_status"
            android:text="Book"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:maxLines="1"
            android:fontFamily="@font/mulibold"
            android:textSize="@dimen/list_text_font_size"
            android:textColor="@color/JGGWhite"
            android:background="@drawable/green_background"/>
    </LinearLayout>
</LinearLayout>
