<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kelvin.jacksgogo.Activities.Jobs.AcceptBidActivity">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:theme="@style/AppTheme"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/accept_bid_actionbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/JGGWhite"
                app:contentInsetStart="0dp"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/AppTheme"/>
        </android.support.design.widget.AppBarLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/JGGGrey5"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/JGGWhite"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="12"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/img_detail"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_gravity="right"
                            android:src="@mipmap/icon_cat_householdchores"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="88"
                        android:gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/lbl_title"
                                android:text="Gardening"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/JGGBlack"
                                android:fontFamily="@font/mulibold"
                                android:textSize="@dimen/caption_font_size"/>
                            <TextView
                                android:id="@+id/lbl_date"
                                android:text="21 Jul, 2017 10:00-12:00PM"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:textColor="@color/JGGBlack"
                                android:fontFamily="@font/muliregular"
                                android:textSize="@dimen/caption_font_size"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/JGGGrey4">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:background="@color/JGGWhite">
                    <LinearLayout
                        android:layout_width="96dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <com.makeramen.roundedimageview.RoundedImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/img_avatar"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/nurse"
                            android:background="@color/transparent"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            app:riv_corner_radius="@dimen/circle_image_radius"
                            app:riv_mutate_background="true"
                            app:riv_oval="true"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="45"
                        android:gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:text="Alan.Tam"
                                android:id="@+id/lbl_username"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:textColor="@color/JGGBlack"
                                android:fontFamily="@font/mulibold"
                                android:textSize="@dimen/button_font_size"/>
                            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/user_ratingbar"
                                style="@style/Widget.MaterialRatingBar.RatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="13dp"
                                android:stepSize="0.01"
                                android:isIndicator="true"
                                app:mrb_progressBackgroundTint="@color/JGGGrey3"
                                app:mrb_progressTint="@color/JGGYellow"
                                app:mrb_secondaryProgressTint="@color/JGGYellow" />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="55"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:background="@color/JGGWhite">
                        <TextView
                            android:id="@+id/lbl_accept_bid_price"
                            android:text="$ 100.00"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd"
                            android:layout_marginRight="16dp"
                            android:textColor="@color/JGGBlack"
                            android:textSize="@dimen/button_font_size"
                            android:fontFamily="@font/mulibold"
                            android:gravity="end" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/JGGGrey4">
                </LinearLayout>
                <TextView
                    android:text="Congratulations on finding a good match!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/JGGBlack"
                    android:fontFamily="@font/muliregular"
                    android:textSize="@dimen/list_title_font_size"/>
                <TextView
                    android:text="Next, Let's set up a payment method. The payment will only be released when the job is completed."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/JGGBlack"
                    android:fontFamily="@font/muliregular"
                    android:textSize="@dimen/list_title_font_size"/>
                <TextView
                    android:visibility="visible"
                    android:id="@+id/btn_pay_by_credit_card"
                    android:text="Pay by credit card ending in 3792."
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:padding="@dimen/edit_text_padding_size"
                    android:textAlignment="center"
                    android:fontFamily="@font/mulibold"
                    android:textSize="@dimen/list_title_font_size"
                    android:textColor="@color/JGGWhite"
                    android:background="@drawable/green_background">
                </TextView>
                <TextView
                    android:visibility="visible"
                    android:id="@+id/btn_pay_by_jacks_credit_card"
                    android:text="Pay by Jacks Credit - balance $ 150.00"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:padding="@dimen/edit_text_padding_size"
                    android:textAlignment="center"
                    android:fontFamily="@font/mulibold"
                    android:textSize="@dimen/list_title_font_size"
                    android:textColor="@color/JGGWhite"
                    android:background="@drawable/green_background">
                </TextView>
            </LinearLayout>
        </FrameLayout>
    </android.support.design.widget.CoordinatorLayout>
</android.support.constraint.ConstraintLayout>
