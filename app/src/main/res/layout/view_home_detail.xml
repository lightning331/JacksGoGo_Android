<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:text="Here are your updates since 6 hrs ago:"
        android:textColor="@color/JGGBlack"
        android:textSize="@dimen/list_text_font_size"
        android:fontFamily="@font/muliregular"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/JGGWhite"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@mipmap/icon_provider_green"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:text="My Accepted Jobs"
                android:textColor="@color/JGGGreen"
                android:textSize="@dimen/list_text_font_size"
                android:fontFamily="@font/muliregular"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:text="1 Service"
                android:textColor="@color/JGGGreen"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/muliregular"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:text="1"
                android:textColor="@color/JGGBlack"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/mulibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="appointment"
                android:textColor="@color/JGGBlack"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/muliregular"
                android:layout_marginLeft="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:text="1 new update"
                android:textColor="@color/JGGOrange"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/muliregular"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@mipmap/button_next_green"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_verified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:text="1"
                android:textColor="@color/JGGBlack"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/mulibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="new service verified!"
                android:textColor="@color/JGGBlack"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/muliregular"
                android:layout_marginLeft="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:src="@mipmap/button_next_green"
                android:layout_width="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/JGGWhite"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@mipmap/client"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:text="My Posted Jobs"
                android:textColor="@color/JGGCyan"
                android:textSize="@dimen/list_text_font_size"
                android:fontFamily="@font/muliregular"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:text="1 Jobs"
                android:textColor="@color/JGGCyan"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/muliregular"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:text="1"
                android:textColor="@color/JGGBlack"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/mulibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="quotation"
                android:textColor="@color/JGGBlack"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/muliregular"
                android:layout_marginLeft="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:text="1 new quotation"
                android:textColor="@color/JGGOrange"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/muliregular"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@mipmap/button_next_cyan"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:text="1"
                android:textColor="@color/JGGBlack"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/mulibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="appointment"
                android:textColor="@color/JGGBlack"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/muliregular"
                android:layout_marginLeft="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:src="@mipmap/button_next_cyan"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/JGGWhite"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@mipmap/icon_member"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:text="My GoClubs &amp; Events"
                android:textColor="@color/JGGPurple"
                android:textSize="@dimen/list_text_font_size"
                android:fontFamily="@font/muliregular"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:text="1 GoClubs,"
                android:textColor="@color/JGGPurple"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/muliregular"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="1 Events"
                android:textColor="@color/JGGPurple"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/muliregular"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:text="1"
                android:textColor="@color/JGGBlack"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/mulibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="GoClubs"
                android:textColor="@color/JGGBlack"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/muliregular"
                android:layout_marginLeft="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:text="1 new chats, 3 new events"
                android:textColor="@color/JGGOrange"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/muliregular"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@mipmap/button_next_green"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:text="1"
                android:textColor="@color/JGGBlack"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/mulibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="events"
                android:textColor="@color/JGGBlack"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/muliregular"
                android:layout_marginLeft="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:text="1 new chats"
                android:textColor="@color/JGGOrange"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/muliregular"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@mipmap/button_next_green"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
