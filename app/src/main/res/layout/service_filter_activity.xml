<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kelvin.jacksgogo.Activities.Search.ServiceFilterActivity">
    <LinearLayout
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/JGGWhite">

        <ImageButton
            android:id="@+id/btn_filter_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/JGGWhite"
            android:src="@mipmap/button_close_round_green"/>
        <TextView
            android:text="Show Only Services With The Keywords"
            android:fontFamily="@font/mulibold"
            android:textSize="@dimen/list_title_font_size"
            android:textColor="@color/JGGBlack"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:text="Service keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="@dimen/edit_text_padding_size"
            android:fontFamily="@font/muliregular"
            android:textSize="@dimen/body_font_size"
            android:background="@drawable/grey_border_background">
        </EditText>
        <TextView
            android:text="Location"
            android:fontFamily="@font/mulibold"
            android:textSize="@dimen/list_title_font_size"
            android:textColor="@color/JGGBlack"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:text="2 Jurong West Avenue 5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="@dimen/edit_text_padding_size"
            android:fontFamily="@font/muliregular"
            android:textSize="@dimen/body_font_size"
            android:background="@drawable/grey_border_background">
        </EditText>
        <TextView
            android:id="@+id/btn_invite"
            android:text="Use Your Current Location"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="@dimen/edit_text_padding_size"
            android:textAlignment="center"
            android:fontFamily="@font/mulibold"
            android:textSize="@dimen/button_font_size"
            android:textColor="@color/JGGWhite"
            android:background="@drawable/green_background">
        </TextView>
        <TextView
            android:text="Category"
            android:fontFamily="@font/mulibold"
            android:textSize="@dimen/list_title_font_size"
            android:textColor="@color/JGGBlack"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/JGGWhite"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/icon_cat_cooking_baking"/>
                    <TextView
                        android:text="Cooking &amp; Baking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/muliregular"
                        android:textSize="@dimen/caption_font_size"
                        android:textColor="@color/JGGBlack"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="7dp"
                    android:layout_height="match_parent">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/JGGWhite"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/icon_cat_education"/>
                    <TextView
                        android:text="Education"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/muliregular"
                        android:textSize="@dimen/caption_font_size"
                        android:textColor="@color/JGGBlack"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="7dp"
                    android:layout_height="match_parent">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/JGGWhite"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/icon_cat_handyman"/>
                    <TextView
                        android:text="Handyman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/muliregular"
                        android:textSize="@dimen/caption_font_size"
                        android:textColor="@color/JGGBlack"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="7dp"
                    android:layout_height="match_parent">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/JGGWhite"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/icon_cat_householdchores"/>
                    <TextView
                        android:text="Household Chores"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/muliregular"
                        android:textSize="@dimen/caption_font_size"
                        android:textColor="@color/JGGBlack"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="7dp">
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/JGGWhite"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/icon_cat_messenger"/>
                    <TextView
                        android:text="Messenger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/muliregular"
                        android:textSize="@dimen/caption_font_size"
                        android:textColor="@color/JGGBlack"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="7dp"
                    android:layout_height="match_parent">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/JGGWhite"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/icon_cat_runningman"/>
                    <TextView
                        android:text="Running Man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/muliregular"
                        android:textSize="@dimen/caption_font_size"
                        android:textColor="@color/JGGBlack"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="7dp"
                    android:layout_height="match_parent">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/JGGWhite"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/icon_cat_leisure"/>
                    <TextView
                        android:text="Sports"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/muliregular"
                        android:textSize="@dimen/caption_font_size"
                        android:textColor="@color/JGGBlack"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="7dp"
                    android:layout_height="match_parent">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_other_professions"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/JGGWhite"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/icon_cat_other"/>
                    <TextView
                        android:text="Other Professions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/muliregular"
                        android:textSize="@dimen/caption_font_size"
                        android:textColor="@color/JGGBlack"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="7dp">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
