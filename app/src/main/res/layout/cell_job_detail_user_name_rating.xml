<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/avatar_title_view"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_background"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/JGGWhite">
        <LinearLayout
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="64dp"
                android:layout_height="64dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_avatar"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/nurse2"
                    android:background="@color/transparent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="@dimen/circle_image_radius"
                    app:riv_mutate_background="true"
                    app:riv_oval="true"/>
                <RelativeLayout
                    android:id="@+id/like_button_layout"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/badge_white">
                    <ImageView
                        android:id="@+id/btn_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:src="@mipmap/button_like_orange"/>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_user_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/lbl_user_type"
                    android:text="Owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/JGGGrey2"
                    android:fontFamily="@font/mulibold"
                    android:textSize="@dimen/caption_font_size"/>
                <TextView
                    android:text="Alan.Tam"
                    android:id="@+id/lbl_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/JGGBlack"
                    android:fontFamily="@font/mulibold"
                    android:textSize="@dimen/button_font_size"/>
                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/user_ratingbar"
                    style="@style/Widget.MaterialRatingBar.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:stepSize="0.01"
                    android:isIndicator="true"
                    app:mrb_progressBackgroundTint="@color/JGGGrey3"
                    app:mrb_progressTint="@color/JGGYellow"
                    app:mrb_secondaryProgressTint="@color/JGGYellow" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_view_all_services"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:text="Admin"
                android:id="@+id/lbl_center_user_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:layout_marginRight="16dp"
                android:textColor="@color/JGGBlack"
                android:fontFamily="@font/muliregular"
                android:textSize="@dimen/caption_font_size"
                android:gravity="end" />
            <TextView
                android:id="@+id/lbl_reviews"
                android:text="View All Services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:textAlignment="viewEnd"
                android:textColor="@color/JGGGreen"
                android:textSize="@dimen/button_font_size"
                android:fontFamily="@font/mulibold"
                android:gravity="end" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_decline"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:text="GoClub Owner"
                android:id="@+id/lbl_right_user_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:layout_marginRight="16dp"
                android:textColor="@color/JGGBlack"
                android:fontFamily="@font/muliregular"
                android:textSize="@dimen/caption_font_size"
                android:gravity="end" />
            <TextView
                android:id="@+id/lbl_decline"
                android:text="Decline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:layout_marginRight="16dp"
                android:textColor="@color/JGGGreen"
                android:textSize="@dimen/button_font_size"
                android:fontFamily="@font/mulibold"
                android:gravity="end" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
