<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kelvin.jacksgogo.Activities.GoClub_Event.GcPostedEventActivity">
    <LinearLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:theme="@style/AppTheme"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/posted_gc_actionbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/JGGWhite"
                app:contentInsetStart="0dp"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/AppTheme"/>
        </android.support.design.widget.AppBarLayout>
        <LinearLayout
            android:id="@+id/posted_service_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/JGGGrey4">
            <ScrollView
                android:id="@+id/posted_event_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/JGGGrey4"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="104dp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="96dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@color/JGGWhite">
                            <ImageView
                                android:id="@+id/img_category"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:src="@mipmap/icon_cat_householdchores"/>
                            <TextView
                                android:id="@+id/txt_category_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/JGGBlack"
                                android:textSize="@dimen/caption_font_size"
                                android:fontFamily="@font/mulibold"
                                android:text="Household Chores"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="5dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@color/JGGWhite">
                            <TextView
                                android:id="@+id/txt_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:textColor="@color/JGGBlack"
                                android:textSize="@dimen/title1_font_size"
                                android:fontFamily="@font/mulibold"
                                android:text="Gardening"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:orientation="horizontal">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/JGGWhite"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="52dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="6dp"
                                android:src="@mipmap/icon_time"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="85"
                            android:gravity="center"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/txt_time_type"
                                    android:text="Repeating Event"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginRight="16dp"
                                    android:textColor="@color/JGGBlack"
                                    android:fontFamily="@font/mulibold"
                                    android:textSize="@dimen/list_title_font_size"/>
                                <TextView
                                    android:id="@+id/txt_job_time"
                                    android:text="Coming: 17 Jul, 2017 3:00PM- 5:00 PM"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="16dp"
                                    android:textColor="@color/JGGBlack"
                                    android:fontFamily="@font/mulibold"
                                    android:textSize="@dimen/body_font_size"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:orientation="vertical"
                        android:background="@color/JGGWhite">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:orientation="horizontal">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/JGGWhite"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="52dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="6dp"
                                android:src="@mipmap/icon_info"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="85"
                            android:gravity="center"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/txt_description"
                                    android:text="Let's have a friendly badminton match! Join now and we will team you up!"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginRight="16dp"
                                    android:textColor="@color/JGGBlack"
                                    android:fontFamily="@font/muliregular"
                                    android:textSize="@dimen/list_title_font_size"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:orientation="vertical"
                        android:background="@color/JGGWhite">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:orientation="horizontal">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/JGGWhite"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="52dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="6dp"
                                android:src="@mipmap/icon_location"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginRight="52dp">
                                <TextView
                                    android:id="@+id/txt_address"
                                    android:text="Jurong Sports Complex"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginRight="16dp"
                                    android:textColor="@color/JGGBlack"
                                    android:fontFamily="@font/mulibold"
                                    android:textSize="@dimen/list_title_font_size"/>
                                <TextView
                                    android:id="@+id/txt_sub_address"
                                    android:text="3, Jurong Wet Avenue 6 64982"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginRight="16dp"
                                    android:textColor="@color/JGGBlack"
                                    android:fontFamily="@font/muliregular"
                                    android:textSize="@dimen/list_title_font_size"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/ll_map_pin"
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:gravity="center"
                                android:layout_alignParentRight="true">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@mipmap/button_location_purple"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:orientation="vertical"
                        android:background="@color/JGGWhite">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:orientation="horizontal">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/JGGGrey3"
                        android:orientation="horizontal">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:orientation="horizontal">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/JGGWhite"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="52dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="6dp"
                                android:src="@mipmap/icon_group"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="85"
                            android:gravity="center"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/lbl_posted_job_budget"
                                    android:text="No associated GoClub"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginRight="16dp"
                                    android:textColor="@color/JGGBlack"
                                    android:fontFamily="@font/muliregular"
                                    android:textSize="@dimen/list_title_font_size"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:orientation="vertical"
                        android:background="@color/JGGWhite">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:orientation="horizontal">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal"
                        android:background="@color/JGGWhite">
                        <LinearLayout
                            android:layout_width="96dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">
                            <com.makeramen.roundedimageview.RoundedImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/img_organizer_avatar"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@mipmap/nurse"
                                android:background="@color/transparent"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                app:riv_corner_radius="@dimen/circle_image_radius"
                                app:riv_mutate_background="true"
                                app:riv_oval="true"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="45"
                            android:gravity="center"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/txt_organiser"
                                    android:text="Organiser"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:textColor="@color/JGGGrey1"
                                    android:fontFamily="@font/muliregular"
                                    android:textSize="@dimen/caption_font_size"/>
                                <TextView
                                    android:id="@+id/txt_username"
                                    android:text="RoseLim"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:textColor="@color/JGGBlack"
                                    android:fontFamily="@font/mulibold"
                                    android:textSize="@dimen/button_font_size"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/activity_horizontal_margin"
                        android:background="@color/JGGGrey4">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/grey_round_border_background">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="1 people have joined!"
                                android:textAlignment="center"
                                android:fontFamily="@font/mulibold"
                                android:textColor="@color/JGGBlack"
                                android:textSize="@dimen/caption_font_size"/>
                            <Button
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@mipmap/button_viewall_purple"
                                android:layout_alignParentRight="true" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/JGGGrey3"
                        android:orientation="horizontal">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_horizontal_margin">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Schedule"
                            android:fontFamily="@font/mulibold"
                            android:textColor="@color/JGGBlack"
                            android:textSize="@dimen/list_title_font_size"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txt_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Next: 24 Jul, 2017"
                                android:fontFamily="@font/muliregular"
                                android:textColor="@color/JGGBlack"
                                android:textSize="@dimen/caption_font_size"/>
                            <TextView
                                android:id="@+id/txt_schedule"
                                android:text="View Schedule"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/JGGPurple"
                                android:fontFamily="@font/mulibold"
                                android:textSize="@dimen/button_font_size"
                                android:layout_alignParentRight="true" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/JGGGrey3"
                        android:orientation="horizontal">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Update"
                            android:fontFamily="@font/mulibold"
                            android:textColor="@color/JGGBlack"
                            android:textSize="@dimen/list_title_font_size"/>
                        <Button
                            android:visibility="visible"
                            android:id="@+id/btn_done"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/button_height"
                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                            android:text="@string/post_update"
                            android:textAllCaps="false"
                            android:background="@drawable/purple_border_background"
                            android:fontFamily="@font/mulibold"
                            android:textSize="@dimen/list_title_font_size"
                            android:textColor="@color/JGGPurple" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/JGGGrey3"
                        android:orientation="horizontal">
                    </LinearLayout>

                    <co.lujun.androidtagview.TagContainerLayout
                        android:id="@+id/posted_service_tag_list"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/activity_horizontal_margin"
                        app:tag_theme="none"
                        app:container_border_radius="0dp"
                        app:container_border_width="0dp"
                        app:tag_clickable="true"
                        app:container_background_color="@color/JGGGrey4"
                        app:container_enable_drag="false"
                        app:horizontal_interval="10dp"
                        app:tag_background_color="@color/JGGWhite"
                        app:tag_border_color="@color/JGGGrey3"
                        app:tag_text_color="@color/JGGPurple"
                        app:tag_text_size="@dimen/caption_font_size"
                        app:vertical_interval="10dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/JGGGrey3"
                        android:orientation="horizontal">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_horizontal_margin">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Active Event"
                            android:background="@color/JGGWhite"
                            android:fontFamily="@font/mulibold"
                            android:textColor="@color/JGGBlack"
                            android:textSize="@dimen/list_title_font_size"/>
                        <TextView
                            android:id="@+id/txt_active_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@color/JGGWhite"
                            android:text="Latest response: 10min ago"
                            android:fontFamily="@font/muliregular"
                            android:textColor="@color/JGGBlack"
                            android:textSize="@dimen/caption_font_size"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/JGGGrey3"
                        android:orientation="horizontal">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txt_ref_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Event reference no: E38291"
                                android:fontFamily="@font/muliregular"
                                android:textColor="@color/JGGGrey2"
                                android:textSize="@dimen/caption_font_size"/>
                            <TextView
                                android:id="@+id/txt_ref_created"
                                android:text="Created on 3 Jul, 2017"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/JGGGrey2"
                                android:fontFamily="@font/muliregular"
                                android:textSize="@dimen/caption_font_size"
                                android:layout_alignParentRight="true" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:id="@+id/posted_job_viewd_layout"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/JGGPurple10Percent">
                <TextView
                    android:id="@+id/lbl_booked_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/JGGBlack"
                    android:textSize="@dimen/caption_font_size"
                    android:fontFamily="@font/mulibold"
                    android:text="21"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:maxLines="1"
                    android:textColor="@color/JGGBlack"
                    android:textSize="@dimen/caption_font_size"
                    android:fontFamily="@font/muliregular"
                    android:text="people have joined this event recently!"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical">
                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_user_avatar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/nurse"
                    android:background="@color/transparent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="@dimen/circle_image_radius"
                    app:riv_mutate_background="true"
                    app:riv_oval="true"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="55"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/JGGGrey2"
                        android:fontFamily="@font/muliregular"
                        android:text="Organiser"
                        android:textSize="@dimen/caption_font_size"/>
                    <TextView
                        android:text="JGG Approval Agent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/JGGBlack"
                        android:fontFamily="@font/mulibold"
                        android:textSize="@dimen/button_font_size"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/btn_posted_service_chat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="45"
                    android:gravity="center"
                    android:background="@color/JGGPurple">
                    <ImageView
                        android:id="@+id/chat_icon"
                        android:layout_width="64dp"
                        android:layout_height="32dp"
                        android:background="@mipmap/button_groupchat"
                        android:scaleType="centerInside"/>
                    <TextView
                        android:id="@+id/lblBadgeCount"
                        android:text="1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/badge_number_size"
                        android:layout_gravity="top|end"
                        android:layout_centerVertical="true"
                        android:textAlignment="center"
                        android:background="@drawable/badge_red"
                        android:fontFamily="@font/muliregular"
                        android:textColor="@color/JGGWhite"
                        android:textSize="@dimen/badge_font_size"
                        android:layout_alignRight="@id/chat_icon"
                        android:layout_alignTop="@id/chat_icon"/>
                </RelativeLayout>
