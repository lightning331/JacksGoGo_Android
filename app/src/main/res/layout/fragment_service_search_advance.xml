<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kelvin.jacksgogo.Fragments.Search.ServiceSearchAdvanceFragment">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/JGGGrey5"
            android:orientation="vertical">
            <EditText
                android:id="@+id/txt_advance_search"
                android:hint="Search Service"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:padding="@dimen/edit_text_padding_size"
                android:fontFamily="@font/muliregular"
                android:textSize="@dimen/list_title_font_size"
                android:background="@drawable/green_border_background">
            </EditText>
            <TextView
                android:text="Area"
                android:fontFamily="@font/mulibold"
                android:textSize="@dimen/list_title_font_size"
                android:textColor="@color/JGGBlack"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lbl_advance_search_area"
                        android:text="All areas"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:padding="@dimen/edit_text_padding_size"
                        android:fontFamily="@font/muliregular"
                        android:textSize="@dimen/list_title_font_size"
                        android:textColor="@color/JGGBlack"
                        android:background="@drawable/grey_border_background">
                    </TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/edit_text_padding_size"
                        android:weightSum="100">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="100">

                        </LinearLayout>
                        <ImageView
                            android:id="@+id/btn_service_search"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:src="@mipmap/button_showless_green"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:text="Free Slots"
                android:fontFamily="@font/mulibold"
                android:textSize="@dimen/list_title_font_size"
                android:textColor="@color/JGGBlack"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/grey_border_background">
                <LinearLayout
                    android:id="@+id/advance_search_date_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    tools:ignore="Suspicious0dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/lbl_advance_search_date"
                        android:hint="Date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/muliregular"
                        android:textSize="@dimen/list_title_font_size"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/advance_search_time_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/lbl_advance_search_time"
                        android:hint="Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/JGGBlack"
                        android:background="@color/transparent"
                        android:fontFamily="@font/muliregular"
                        android:textSize="@dimen/list_title_font_size"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:text="Categories"
                android:fontFamily="@font/mulibold"
                android:textSize="@dimen/list_title_font_size"
                android:textColor="@color/JGGBlack"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/btn_post_cooking"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/JGGGreen10Percent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/icon_cat_cooking_baking"/>
                        <TextView
                            android:text="Cooking &amp; Baking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:textAlignment="center"
                            android:fontFamily="@font/muliregular"
                            android:textSize="@dimen/caption_font_size"
                            android:textColor="@color/JGGBlack"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="7dp"
                        android:layout_height="match_parent">
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_post_education"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/JGGGreen10Percent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/icon_cat_education"/>
                        <TextView
                            android:text="Education"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:textAlignment="center"
                            android:fontFamily="@font/muliregular"
                            android:textSize="@dimen/caption_font_size"
                            android:textColor="@color/JGGBlack"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="7dp"
                        android:layout_height="match_parent">
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_post_handyman"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/JGGGreen10Percent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/icon_cat_handyman"/>
                        <TextView
                            android:text="Handyman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:textAlignment="center"
                            android:fontFamily="@font/muliregular"
                            android:textSize="@dimen/caption_font_size"
                            android:textColor="@color/JGGBlack"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="7dp"
                        android:layout_height="match_parent">
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_post_household"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/JGGGreen10Percent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/icon_cat_householdchores"/>
                        <TextView
                            android:text="Household Chores"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:textAlignment="center"
                            android:fontFamily="@font/muliregular"
                            android:textSize="@dimen/caption_font_size"
                            android:textColor="@color/JGGBlack"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="7dp">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/btn_post_messenger"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/JGGGreen10Percent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/icon_cat_messenger"/>
                        <TextView
                            android:text="Messenger"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:textAlignment="center"
                            android:fontFamily="@font/muliregular"
                            android:textSize="@dimen/caption_font_size"
                            android:textColor="@color/JGGBlack"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="7dp"
                        android:layout_height="match_parent">
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_post_run"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/JGGGreen10Percent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/icon_cat_runningman"/>
                        <TextView
                            android:text="Running Man"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:textAlignment="center"
                            android:fontFamily="@font/muliregular"
                            android:textSize="@dimen/caption_font_size"
                            android:textColor="@color/JGGBlack"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="7dp"
                        android:layout_height="match_parent">
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_post_sports"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/JGGGreen10Percent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/icon_cat_sports"/>
                        <TextView
                            android:text="Sports"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:textAlignment="center"
                            android:fontFamily="@font/muliregular"
                            android:textSize="@dimen/caption_font_size"
                            android:textColor="@color/JGGBlack"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="7dp"
                        android:layout_height="match_parent">
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_post_other"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/JGGGreen10Percent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/icon_cat_other"/>
                        <TextView
                            android:text="Other Professions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:textAlignment="center"
                            android:fontFamily="@font/muliregular"
                            android:textSize="@dimen/caption_font_size"
                            android:textColor="@color/JGGBlack"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="7dp">
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:text="Additional Tags"
                android:fontFamily="@font/mulibold"
                android:textSize="@dimen/list_title_font_size"
                android:textColor="@color/JGGBlack"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/txt_advance_additional_tag"
                android:hint="Separate tags with a comma"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:padding="@dimen/edit_text_padding_size"
                android:fontFamily="@font/muliregular"
                android:textSize="@dimen/list_title_font_size"
                android:background="@drawable/grey_border_background">
            </EditText>
            <TextView
                android:id="@+id/btn_advance_search"
                android:text="Search"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:padding="@dimen/edit_text_padding_size"
                android:textAlignment="center"
                android:fontFamily="@font/mulibold"
                android:textSize="@dimen/button_font_size"
                android:textColor="@color/JGGWhite"
                android:background="@drawable/green_background">
            </TextView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
