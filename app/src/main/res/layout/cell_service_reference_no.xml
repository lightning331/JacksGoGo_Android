<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/JGGGrey4">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/lbl_booked_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:maxLines="1"
                android:textColor="@color/JGGGrey1"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/muliregular"
                android:text="Service reference no:"/>
            <TextView
                android:id="@+id/lbl_booked_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/JGGGrey1"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/muliregular"
                android:text="S38290"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="end|center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lbl_viewing_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:gravity="end"
                android:layout_marginRight="5dp"
                android:textColor="@color/JGGGrey1"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/muliregular"
                android:text="Posted on "/>
            <TextView
                android:id="@+id/lbl_viewing_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:layout_marginRight="16dp"
                android:textColor="@color/JGGGrey1"
                android:textSize="@dimen/caption_font_size"
                android:fontFamily="@font/muliregular"
                android:text="12 Dec, 2017"
                android:gravity="end" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
