<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell_background"
    android:layout_width="85dp"
    android:layout_height="85dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/JGGWhite"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_search_category"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_cat_favourites"/>
        <TextView
            android:id="@+id/lbl_search_category"
            android:text="Favourited Services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:fontFamily="@font/muliregular"
            android:textSize="@dimen/caption_font_size"
            android:textColor="@color/JGGBlack"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp">
    </LinearLayout>
</LinearLayout>
