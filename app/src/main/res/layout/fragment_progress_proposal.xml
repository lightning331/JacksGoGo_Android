<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kelvin.jacksgogo.Fragments.Jobs.ProgressProposalFragment">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/job_main_footer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/job_main_given_review_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/job_main_get_review_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/job_main_tip_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/job_main_payment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/job_main_work_progress_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/job_main_cancelled_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/job_main_confirmed_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/job_main_quotation_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:visibility="visible"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_proposal"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/icon_posted_inactive"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lbl_posted_time"
                        android:text="12 Jul 2017 8:15 PM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/JGGGrey2"
                        android:fontFamily="@font/muliregular"
                        android:textSize="12dp"/>
                    <LinearLayout
                        android:id="@+id/btn_posted_job"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="32dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/lbl_next_step_title"
                            android:text="New job request posted."
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/JGGBlack"
                            android:fontFamily="@font/muliregular"
                            android:textSize="@dimen/list_title_font_size"/>
                        <ImageView
                            android:src="@mipmap/button_next_cyan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/JGGGrey4">
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/accept_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/lbl_alert_description">

                <TextView
                    android:id="@+id/btn_invite_reject"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/JGGCyan10Percent"
                    android:textColor="@color/JGGCyan"
                    android:fontFamily="@font/mulibold"
                    android:textSize="@dimen/list_title_font_size"
                    android:text="Reject Bid"/>

                <TextView
                    android:id="@+id/btn_invite_accept"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/JGGCyan"
                    android:textColor="@color/JGGWhite"
                    android:fontFamily="@font/mulibold"
                    android:textSize="@dimen/list_title_font_size"
                    android:text="Accept Bid"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/chat_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_avatar"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/nurse"
                    android:background="@color/transparent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="@dimen/circle_image_radius"
                    app:riv_mutate_background="true"
                    app:riv_oval="true"/>
                <TextView
                    android:id="@+id/lbl_provider_name"
                    android:text="catherinedesilva"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:layout_marginRight="5dp"
                    android:maxLines="2"
                    android:textColor="@color/JGGBlack"
                    android:fontFamily="@font/mulibold"
                    android:textSize="@dimen/button_font_size"
                    android:gravity="center_vertical"/>
                <LinearLayout
                    android:id="@+id/btn_view_proposal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:alpha="0.6"
                    android:gravity="center"
                    android:background="@color/JGGCyan">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@mipmap/proposalviewed"/>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/btn_chat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:background="@color/JGGCyan">
                    <ImageView
                        android:id="@+id/chat_icon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@mipmap/chat_filled"/>
                    <TextView
                        android:id="@+id/lblBadgeCount"
                        android:text="1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/badge_number_size"
                        android:layout_gravity="top|end"
                        android:layout_centerVertical="true"
                        android:textAlignment="center"
                        android:background="@drawable/badge_red"
                        android:fontFamily="@font/muliregular"
                        android:textColor="@color/JGGWhite"
                        android:textSize="@dimen/badge_font_size"
                        android:layout_alignRight="@id/chat_icon"
                        android:layout_alignTop="@id/chat_icon"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
