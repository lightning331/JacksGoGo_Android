<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="32dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/job_report_layout"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/button_jobreport_round_orange"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/JGGOrange"
                    android:fontFamily="@font/muliregular"
                    android:textSize="@dimen/caption_font_size"
                    android:text="Job Report"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/job_invoice_layout"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/button_invoice_round_orange"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/JGGOrange"
                    android:fontFamily="@font/muliregular"
                    android:textSize="@dimen/caption_font_size"
                    android:text="Invoice"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/job_review_layout"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/button_review_round_orange"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/JGGOrange"
                    android:fontFamily="@font/muliregular"
                    android:textSize="@dimen/caption_font_size"
                    android:text="Review"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/job_tip_layout"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/button_tip_round_orange"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/JGGOrange"
                    android:fontFamily="@font/muliregular"
                    android:textSize="@dimen/caption_font_size"
                    android:text="Tip"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/job_rehire_layout"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/button_rehire_round_orange"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/JGGOrange"
                    android:fontFamily="@font/muliregular"
                    android:textSize="@dimen/caption_font_size"
                    android:text="Rehire"/>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>
