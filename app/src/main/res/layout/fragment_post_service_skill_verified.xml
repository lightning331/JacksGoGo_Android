<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/JGGGrey5"
    tools:context="com.kelvin.jacksgogo.Fragments.Search.PostServiceSkillVerifiedFragment">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:text="You can post a service in the categories you have already verified."
                android:textColor="@color/JGGBlack"
                android:textSize="@dimen/list_title_font_size"
                android:fontFamily="@font/muliregular"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:background="@color/JGGGrey5"
                android:gravity="center"
                android:orientation="vertical">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/category_recycler_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/JGGGrey5"
                    android:orientation="vertical">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/JGGGrey4">
            </LinearLayout>
            <TextView
                android:text="Want to post in other categories?"
                android:textColor="@color/JGGBlack"
                android:textSize="@dimen/list_title_font_size"
                android:fontFamily="@font/mulibold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/btn_verify_new_skills"
                android:text="Verify New Skills"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:padding="@dimen/edit_text_padding_size"
                android:textAlignment="center"
                android:fontFamily="@font/mulibold"
                android:textSize="@dimen/button_font_size"
                android:textColor="@color/JGGWhite"
                android:background="@drawable/green_background">
            </TextView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
