<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/JGGGrey5"
    tools:context="com.kelvin.jacksgogo.Activities.Search.ServiceFilterActivity">
    <LinearLayout
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/JGGGrey5"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_filter_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/JGGGrey5"
            android:src="@mipmap/button_tick_round_green"/>
        <TextView
            android:text="Show Only Services With The Keywords"
            android:fontFamily="@font/mulibold"
            android:textSize="@dimen/list_title_font_size"
            android:textColor="@color/JGGBlack"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/txt_filter_keyword"
            android:hint="Service keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="@dimen/edit_text_padding_size"
            android:fontFamily="@font/muliregular"
            android:textSize="@dimen/body_font_size"
            android:background="@drawable/grey_border_background">
        </EditText>
        <TextView
            android:text="Location"
            android:fontFamily="@font/mulibold"
            android:textSize="@dimen/list_title_font_size"
            android:textColor="@color/JGGBlack"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/txt_filter_location"
            android:text="2 Jurong West Avenue 5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="@dimen/edit_text_padding_size"
            android:fontFamily="@font/muliregular"
            android:textSize="@dimen/body_font_size"
            android:background="@drawable/grey_border_background">
        </EditText>
        <TextView
            android:id="@+id/btn_current_location"
            android:text="Use Your Current Location"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAlignment="center"
            android:fontFamily="@font/mulibold"
            android:textSize="@dimen/button_font_size"
            android:textColor="@color/JGGWhite"
            android:background="@drawable/green_background">
        </TextView>
        <TextView
            android:text="Category"
            android:fontFamily="@font/mulibold"
            android:textSize="@dimen/list_title_font_size"
            android:textColor="@color/JGGBlack"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="10dp"
            android:background="@color/JGGGrey5"
            android:gravity="center"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/category_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/JGGGrey5"
                android:orientation="vertical">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
