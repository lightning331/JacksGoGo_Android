<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:background="@color/color_icon_text">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="15"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:text="12"
            android:id="@+id/lblDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="-10dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/color_jobs"
            android:fontFamily="@font/mulibold"
            android:textSize="24dp" />
        <TextView
            android:id="@+id/lblMonth"
            android:text="JUL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:textAlignment="center"
            android:textColor="@color/color_jobs"
            android:fontFamily="@font/mulibold"
            android:textSize="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left|center_vertical"
        android:layout_weight="70">
        <TextView
            android:id="@+id/lblTitle"
            android:text="Bring My Dog To Her Grooming Administrator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:maxLines="1"
            android:textColor="@color/color_text"
            android:fontFamily="@font/mulibold"
            android:textSize="@dimen/headline_font_size" />
        <TextView
            android:id="@+id/lblComment"
            android:text="Badminton,Jurong Event on 10 Jul, 2017 10:00 AM - 12:00 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:maxLines="2"
            android:textColor="@color/color_icon_seg"
            android:fontFamily="@font/mulibold"
            android:textSize="@dimen/caption_font_size"/>
        <TextView
            android:id="@+id/lblStatus"
            android:text="Cancelled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/color_main"
            android:fontFamily="@font/mulibold"
            android:textSize="@dimen/caption_font_size"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size">
            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/appointment_imageViewUserAvatar"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"
                android:src="@mipmap/nurse4"
                android:background="@color/transparent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:riv_corner_radius="@dimen/circle_image_radius"
                app:riv_mutate_background="true"
                app:riv_oval="true"/>

            <TextView
                android:id="@+id/lblBadgeCount"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/badge_number_size"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/badge_background"
                android:fontFamily="@font/muliregular"
                android:text="5"
                android:textAlignment="center"
                android:textColor="@color/color_icon_text"
                android:textSize="@dimen/badge_font_size" />

        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/appointment_statusLayout"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/color_error">
    </RelativeLayout>
</LinearLayout>