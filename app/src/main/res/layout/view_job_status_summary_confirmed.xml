<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:visibility="visible"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_confirmed"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon_appointment_inactive"/>
        <LinearLayout
            android:id="@+id/confirmed_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@color/JGGGrey3"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lbl_confirmed_time"
            android:text="12 Jul 2017 8:15 PM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/JGGGrey2"
            android:fontFamily="@font/muliregular"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/lbl_confirmed_title"
            android:text="Appointment Confirmed."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:textColor="@color/JGGBlack"
            android:fontFamily="@font/mulibold"
            android:textSize="@dimen/list_title_font_size"/>
        <TextView
            android:id="@+id/lbl_confirmed_desc"
            android:text="We'll drop you a notification a day before your appointment."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/JGGBlack"
            android:fontFamily="@font/muliregular"
            android:textSize="@dimen/list_title_font_size"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/btn_set_appointment_date"
            android:text="Set Appointment Date"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:padding="@dimen/edit_text_padding_size"
            android:textAlignment="center"
            android:fontFamily="@font/mulibold"
            android:textSize="@dimen/list_title_font_size"
            android:textColor="@color/JGGWhite"
            android:background="@drawable/green_background">
        </TextView>
    </LinearLayout>
</LinearLayout>
